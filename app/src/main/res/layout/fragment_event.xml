<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin"
        android:minHeight="@dimen/custom_toolbar_height"
        android:minWidth="@dimen/main_fragment_long_btn_width"
        android:orientation="horizontal">


        <ato.spordiklubi.lasteMV.view.TypefaceTextView
            android:id="@+id/custom_toolbar_title"
            style="@style/FontBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/custom_toolbar_title_without_button_left_margin"
            android:layout_marginStart="@dimen/custom_toolbar_title_without_button_left_margin"
            android:gravity="center"
            android:minHeight="@dimen/custom_toolbar_height"
            android:minWidth="@dimen/main_fragment_long_btn_width"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_toolbar_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_toolbar"
        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin">

        <View
            android:id="@+id/view_toolbar_separator"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/accent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_event_fragment_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/container_event_fragment_body"
        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginTop="@dimen/event_fragment_header_margin_top"
        android:minHeight="@dimen/event_fragment_header_height"
        android:orientation="horizontal">

        <ato.spordiklubi.lasteMV.view.TypefaceTextView
            android:id="@+id/view_participant_number"
            style="@style/FontBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/event_fragment_header_height"
            android:minWidth="@dimen/event_fragment_header_height"
            android:text="274"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_size_32sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/event_fragment_header_name_left_margin"
            android:layout_marginStart="@dimen/event_fragment_header_name_left_margin"
            android:minHeight="@dimen/event_fragment_header_height"
            android:orientation="vertical">

            <ato.spordiklubi.lasteMV.view.TypefaceTextView
                android:id="@+id/view_participant_name"
                style="@style/FontBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/event_fragment_header_name_top_padding"
                android:text="Kathleen - Ribanna Tammeveski"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp" />

            <ato.spordiklubi.lasteMV.view.TypefaceTextView
                android:id="@+id/view_participant_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 aastane"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_event_fragment_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginStart="@dimen/main_fragment_layout_left_right_margin"
        android:minHeight="@dimen/event_fragment_body_layout_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_quick_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/email_outline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_fargment_body_top_margin"
            android:minHeight="@dimen/event_fragment_header_height">

            <ato.spordiklubi.lasteMV.view.TypefaceEditText
                android:id="@+id/input_large_units"
                style="@style/Button.White.Bold"
                android:layout_marginEnd="@dimen/event_fragment_body_component_left_right_margin"
                android:layout_marginRight="@dimen/event_fragment_body_component_left_right_margin"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:minHeight="@dimen/new_button_min_height"
                android:minWidth="72dp"
                android:textSize="@dimen/text_size_36sp" />

            <ato.spordiklubi.lasteMV.view.TypefaceEditText
                android:id="@+id/input_small_units"
                style="@style/Button.White.Bold"
                android:layout_marginEnd="@dimen/event_fragment_body_component_left_right_margin"
                android:layout_marginRight="@dimen/event_fragment_body_component_left_right_margin"
                android:inputType="number"
                android:maxLength="2"
                android:imeOptions="actionNext"
                android:minHeight="@dimen/new_button_min_height"
                android:minWidth="72dp"
                android:textSize="@dimen/text_size_36sp" />

            <ato.spordiklubi.lasteMV.view.TypefaceEditText
                android:id="@+id/input_smallest_units"
                style="@style/Button.White.Bold"
                android:inputType="number"
                android:maxLength="3"
                android:minHeight="@dimen/new_button_min_height"
                android:minWidth="72dp"
                android:textSize="@dimen/text_size_36sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/event_fragment_body_unit_height">

            <ato.spordiklubi.lasteMV.view.TypefaceTextView
                android:id="@+id/view_large_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/event_fragment_body_component_left_right_margin"
                android:layout_marginRight="@dimen/event_fragment_body_component_left_right_margin"
                android:gravity="center"
                android:minWidth="72dp"
                android:text="minutit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp" />

            <ato.spordiklubi.lasteMV.view.TypefaceTextView
                android:id="@+id/view_small_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/event_fragment_body_component_left_right_margin"
                android:layout_marginRight="@dimen/event_fragment_body_component_left_right_margin"
                android:gravity="center"
                android:minWidth="72dp"
                android:text="sekundit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp" />

            <ato.spordiklubi.lasteMV.view.TypefaceTextView
                android:id="@+id/view_smallest_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minWidth="72dp"
                android:text="sajandikku"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/container_event_fragment_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/event_fragment_footer_bottom_margin"
        android:layout_marginEnd="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginStart="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginTop="@dimen/event_fragment_footer_top_margin"
        android:minHeight="@dimen/event_fragment_footer_height">

        <ato.spordiklubi.lasteMV.view.TypefaceTextView
            android:id="@+id/btn_enter"
            style="@style/Button.Orange.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/event_fragment_body_component_left_right_margin"
            android:layout_marginRight="@dimen/event_fragment_body_component_left_right_margin"
            android:minHeight="@dimen/event_fragment_smaller_button_min_height"
            android:minWidth="@dimen/event_fragment_footer_long_button_minwidth"
            android:text="@string/btn_enter" />

        <ato.spordiklubi.lasteMV.view.TypefaceTextView
            android:id="@+id/btn_back"
            style="@style/Button.White.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btn_enter"
            android:layout_toRightOf="@+id/btn_enter"
            android:minHeight="@dimen/event_fragment_smaller_button_min_height"
            android:minWidth="@dimen/event_fragment_footer_short_button_minwidth" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_back"
            android:layout_alignLeft="@+id/btn_back"
            android:layout_alignRight="@+id/btn_back"
            android:layout_alignStart="@+id/btn_back"
            android:layout_centerVertical="true"
            android:background="@drawable/icn_back_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginStart="@dimen/main_fragment_layout_left_right_margin"
        android:orientation="vertical">

        <ato.spordiklubi.lasteMV.view.TypefaceTextView
            android:id="@+id/btn_send"
            style="@style/Button.Orange.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/main_fragment_component_spacing"
            android:layout_marginTop="@dimen/main_fragment_component_spacing"
            android:minHeight="@dimen/event_fragment_smaller_button_min_height"
            android:minWidth="@dimen/main_fragment_long_btn_width"
            android:text="@string/btn_send" />

    </LinearLayout>


</LinearLayout>