<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin"
        android:background="@drawable/toolbar"
        android:minHeight="@dimen/custom_toolbar_height"
        android:minWidth="@dimen/main_fragment_long_btn_width"
        android:orientation="horizontal">


        <ato.spordiklubi.lasteMV.view.TypefaceTextView
            android:id="@+id/custom_toolbar_title"
            style="@style/FontBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/custom_toolbar_title_without_button_left_margin"
            android:layout_marginStart="@dimen/custom_toolbar_title_without_button_left_margin"
            android:gravity="center"
            android:minHeight="@dimen/custom_toolbar_height"
            android:minWidth="@dimen/main_fragment_long_btn_width"
            android:textAllCaps="true"
            android:text="@string/toolbar_referee_fragment"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ato.spordiklubi.lasteMV.view.TypefaceEditText
            android:id="@+id/input_referee_name"
            style="@style/Button.White.Long.Bold"
            android:gravity="center"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_fragment_component_height"
            />



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container_event_fragment_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/event_fragment_footer_bottom_margin"
        android:layout_marginEnd="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginLeft="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginRight="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginStart="@dimen/main_fragment_layout_left_right_margin"
        android:layout_marginTop="@dimen/event_fragment_footer_top_margin"
        android:minHeight="@dimen/event_fragment_footer_height"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ato.spordiklubi.lasteMV.view.TypefaceTextView
            android:id="@+id/btn_enter"
            style="@style/Button.Orange.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/event_fragment_body_component_left_right_margin"
            android:layout_marginRight="@dimen/event_fragment_body_component_left_right_margin"
            android:minWidth="@dimen/event_fragment_footer_long_button_minwidth"
            android:text="@string/btn_enter" />

        <ato.spordiklubi.lasteMV.view.TypefaceTextView
            android:id="@+id/btn_back"
            style="@style/Button.White.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_enter"
            android:minWidth="@dimen/event_fragment_footer_short_button_minwidth" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_back"
            android:layout_alignRight="@+id/btn_back"
            android:layout_centerVertical="true"
            android:background="@drawable/icn_back_arrow" />
    </RelativeLayout>

</RelativeLayout>